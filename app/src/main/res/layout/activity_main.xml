<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343656"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"

        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </ImageView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="10dp"
        android:background="#F69e78"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="8dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="10dp"
        android:background="#F69e78"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn5"
        android:layout_marginTop="8dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="330dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/btn5"
        android:background="#F69e78">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="330dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/btn5"
        android:background="#F69e78">

    </RelativeLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/purple_200"
        android:text="Reset"
        android:textColor="@color/white"
        android:textSize="15sp">

    </Button>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignBottom="@id/scoreLayout"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/scoreLayout"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/xArrow"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/arrow" />

        <ImageView
            android:id="@+id/yArrow"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scoreLayout"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">


        <TextView
            android:id="@+id/scoreX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score X : - 0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/scoreY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score Y : - 0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn6"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/btn2"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn4"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:layout_toStartOf="@+id/btn2"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="30dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/btn5"
        android:layout_centerInParent="true"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn4"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:layout_marginLeft="30dp"
        android:layout_toLeftOf="@id/btn8"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn6"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/btn8"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </ImageView>

    </RelativeLayout>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2939393277152565/8129890086">

    </com.google.android.gms.ads.AdView>

</RelativeLayout>